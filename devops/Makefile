.DEFAULT_GOAL := help
.PHONY: help
help: ## ‚ÑπÔ∏è Show this help message
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'


deps: ## üõ†  Install deps needed for the job to run
	@ansible-galaxy install tarantool.cartridge,1.12.0

deploy-test: ## üß™ Deploy the test environment
	@ansible-playbook -i testnet.yaml playbook.yml --limit router-rs,s-1
